<Window x:Class="PCConfigurator.View.AddConfiguartionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCConfigurator.View"
        mc:Ignorable="d"
        Title="AddConfiguartionWindow" Height="450" Width="424"
        WindowStyle="None" Background="Transparent" SizeToContent="Height"
        AllowsTransparency="True" ResizeMode="NoResize">
    <Border Background="#F9F9F9" BorderThickness="1" BorderBrush="#DBDBDB">
        <StackPanel Margin="10">
            <StackPanel>
                <TextBlock Text="Выберите способ добавления" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="10">
                <Button Content="Создать" VerticalAlignment="Center" Name="ButtonCreate" Click="ButtonCreate_Click"/>
                <Button Content="Из файла" VerticalAlignment="Center" Name="ButtonFromFile" Margin="10 0 0 0" Click="ButtonFromFile_Click"/>
                <Button Content="Отмена" VerticalAlignment="Center" Margin="10 0 0 0" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
