<UserControl x:Class="PCConfigurator.View.AddComponents.M2SizeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCConfigurator.View.AddComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" x:Name="StackPanelSize" Margin="0">
            <CheckBox Content="2230" Margin="0 0 10 0" IsChecked="{Binding Is2230}" VerticalAlignment="Center" Click="CheckBoxSize_Click"/>
            <CheckBox Content="2242" Margin="0 0 10 0" IsChecked="{Binding Is2242}" VerticalAlignment="Center" Click="CheckBoxSize_Click"/>
            <CheckBox Content="2260" Margin="0 0 10 0" IsChecked="{Binding Is2260}" VerticalAlignment="Center" Click="CheckBoxSize_Click"/>
            <CheckBox Content="2280" Margin="0 0 10 0" IsChecked="{Binding Is2280}" VerticalAlignment="Center" Click="CheckBoxSize_Click"/>
            <CheckBox Content="22110" IsChecked="{Binding Is22110}" VerticalAlignment="Center" Click="CheckBoxSize_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
