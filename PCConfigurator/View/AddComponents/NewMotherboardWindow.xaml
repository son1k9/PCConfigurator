<Window x:Class="PCConfigurator.View.AddComponents.NewMotherboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCConfigurator.View.AddComponents" 
        xmlns:components="clr-namespace:PCConfigurator.Model.Components"
        xmlns:viewModels="clr-namespace:PCConfigurator.ViewModel.NewComponentsViewModel"
        d:DataContext="{d:DesignInstance Type=viewModels:NewMotherboardViewmodel}"
        mc:Ignorable="d"
        Title="NewMotherboardWindow" Height="560" Width="380" ResizeMode="NoResize" SizeToContent="Height">

    <Window.Resources>
        <ObjectDataProvider x:Key="RamTypeDataSource"
                        ObjectType="{x:Type components:RamType}"
                        MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="{x:Type components:RamType}"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Модель: " Style="{StaticResource textBlockNewComponent}"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Motherboard.Model}" Style="{StaticResource textBoxNewComponent}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Сокет: " Style="{StaticResource textBlockNewComponent}"/>
        <ComboBox Grid.Row="1" Grid.Column="1" SelectedItem="{Binding Motherboard.Socket}" IsEditable="True" Style="{StaticResource comboBoxNewComponent}" Name="comboBoxSocket"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Чипсет: " Style="{StaticResource textBlockNewComponent}"/>
        <ComboBox Grid.Row="2" Grid.Column="1" SelectedItem="{Binding Motherboard.Chipset}" IsEditable="True" Style="{StaticResource comboBoxNewComponent}" Name="comboBoxChipset"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Тип оперативной памяти: " Style="{StaticResource textBlockNewComponent}"/>
        <ComboBox Grid.Row="3" Grid.Column="1" SelectedItem="{Binding Motherboard.RamType}" IsEditable="True" Style="{StaticResource comboBoxNewComponent}" Name="comboBoxRamType"
                  ItemsSource="{Binding Source={StaticResource RamTypeDataSource}}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Кол-во слотов ОЗУ: " Style="{StaticResource textBlockNewComponent}"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Motherboard.RamSlots}" Style="{StaticResource textBoxNewComponent}"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Максимальный объем ОЗУ: " Style="{StaticResource textBlockNewComponent}"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Motherboard.MaxRamCapacity}" Style="{StaticResource textBoxNewComponent}"/>

        <ListBox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" ItemsSource="{Binding Motherboard.M2Slots}">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type components:M2Slot}">
                    <Grid Width="330">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="0.2*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                            <CheckBox Content="Nvme" Margin="0 0 10 0" IsChecked="{Binding IsNvme}"/>
                            <CheckBox Content="Sata" IsChecked="{Binding IsSata}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Stretch">
                            <Button Grid.Column="1" Grid.Row="0" Width="20" Height="20" Margin="2" Command="{Binding Path=DataContext.RemoveM2Slot, RelativeSource={RelativeSource AncestorType={x:Type Window} }}" CommandParameter="{Binding}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.Resources>
        </ListBox>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Количество коннекторов SATA: " Style="{StaticResource textBlockNewComponent}"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Sata3Ports}" Style="{StaticResource textBoxNewComponent}"/>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Количество слотов PCIex16: " Style="{StaticResource textBlockNewComponent}"/>
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding PCIex16Slots}" Style="{StaticResource textBoxNewComponent}"/>

        <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal" FlowDirection="RightToLeft" Margin="10">
            <Button Content="OK" VerticalAlignment="Center" Width="70" Height="30" Click="Button_Click"/>
            <Button Content="Cancel" VerticalAlignment="Center" Width="70" Height="30" Margin="10 0 0 0" IsCancel="True"/>
        </StackPanel>
        
    </Grid>
</Window>
