<UserControl x:Class="PCConfigurator.View.AddComponents.M2InterfaceUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCConfigurator.View.AddComponents"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0">
            <CheckBox Content="Nvme" Margin="0 0 10 0" IsChecked="{Binding IsNvme}" Click="CheckBox_Click" x:Name="CheckBoxNvme"
              VerticalAlignment="Center"/>
            <CheckBox Content="Sata" IsChecked="{Binding IsSata}" Click="CheckBox_Click" x:Name="CheckBoxSata"
              VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
